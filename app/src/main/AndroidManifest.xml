<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wallet">

    <application
        android:name=".ui.utils.GlobalVariables"
        android:allowBackup="true"
        android:icon="@mipmap/wallet_money"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wallet_money"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.wallet.SendMoneyPaymentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            />
        <activity android:name=".ui.wallet.SendMoneyUserActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            />
        <activity android:name=".ui.wallet.AddMoneyPaymentActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            />
        <activity android:name=".ui.wallet.AddMoneyActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            />
        <activity android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BottomNavigator"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            >
        </activity>
        <!-- activity android:name=".MainActivity" / -->
        <activity android:name=".OtpActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            />
        <activity android:name=".ui.wallet.WalletActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            />
    </application>

</manifest>