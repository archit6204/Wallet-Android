<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wallet.SendMoneyPaymentActivity"
    android:background="@color/white"
    android:id="@+id/wallet_swipe_layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary" >

        <include layout="@layout/toolbar"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/wallet_activity_frame_container"
            >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/ttcommons_regular"
                    android:text="Paid to:"
                    android:textColor="@color/gray_4"
                    android:textSize="22sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sent_beneficiary_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="84dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/ttcommons_demibold"
                android:text="Beneficiary name"
                android:textColor="@color/gray_4"
                android:visibility="invisible"
                android:textSize="20sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_send_money_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:visibility="invisible"
                    android:fontFamily="@font/ttcommons_demibold"
                    android:text="@string/add_wallet_amount"
                    android:textColor="@color/colorAccentBlue50"
                    android:textSize="22sp" />
            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/colorAccentBlue50"
                android:visibility="visible"/>
        </FrameLayout>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>