<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_transaction_id"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        android:layout_gravity="top"
        app:cardBackgroundColor="@color/white"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_id_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction ID"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:layout_gravity="start|top"
            android:textColor="@color/gray_5"
            android:textSize="14sp"
            android:visibility="invisible"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_help_support_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/ic_help_support"
            android:visibility="visible"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_help_support_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archit Pandey"
            android:layout_marginTop="32dp"
            android:layout_marginStart="64dp"
            android:layout_gravity="top"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/value_18sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_help_support_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="64dp"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/value_14sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/colorAccentBlue50"
            android:textSize="16sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_next_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:layout_gravity="end|bottom"
            app:srcCompat="@drawable/ic_next_arrow"
            android:visibility="invisible"
            />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>