<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.TransactionHistory.transactionStatus.TransactionStatusActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_fragment_wallet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/added_amount_green"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_transaction_type_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/ic_check"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Successful"
            android:layout_marginTop="114dp"
            android:layout_gravity="top|center"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/value_20sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_instrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debited from: HDFC bank"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/gray_7"
            android:textSize="12sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days ago"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:textColor="@color/gray_8"
            android:textSize="12sp"
            android:fontFamily="@font/ttcommons_regular"/>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/inc_transaction_id_details"
        layout="@layout/transaction_status_id_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp" />

    <include
        android:id="@+id/inc_paid_to_details"
        layout="@layout/transaction_status_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp" />

    <include
        android:id="@+id/inc_debited_from_details"
        layout="@layout/transaction_status_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="98dp"
    />

    <include
        android:id="@+id/inc_HelpSupport_details"
        layout="@layout/transaction_status_id_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="124dp"
        />

</FrameLayout>