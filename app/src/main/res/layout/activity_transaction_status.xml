<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.TransactionHistory.transactionStatus.TransactionStatusActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_fragment_wallet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/added_amount_green"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_transaction_type_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/ic_check"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Successful"
            android:layout_marginTop="114dp"
            android:layout_gravity="top|center"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/value_20sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_instrument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debited from: HDFC bank"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/gray_7"
            android:textSize="12sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days ago"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:textColor="@color/gray_8"
            android:textSize="12sp"
            android:fontFamily="@font/ttcommons_regular"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_transaction_id"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginBottom="106dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_beneficiary_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/ic_user"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_beneficiary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archit Pandey"
            android:layout_marginTop="42dp"
            android:layout_marginStart="64dp"
            android:layout_gravity="top"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/value_18sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 150.00"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|top"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/value_18sp"
            android:fontFamily="@font/ttcommons_demibold"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_paid_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid to"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:layout_gravity="start|top"
            android:textColor="@color/gray_5"
            android:textSize="14sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/colorAccentBlue50"
            android:textSize="16sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_share_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end|bottom"
            app:srcCompat="@drawable/ic_baseline_share_24"
            />

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>