<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ui.TransactionHistory.transactionStatus.TransactionStatusActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_fragment_wallet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="@color/added_amount_green"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_transaction_back_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="top|left"
            app:srcCompat="@drawable/ic_arrow_back"
        />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_transaction_type_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="64dp"
            android:layout_gravity="top|center"
            app:srcCompat="@drawable/ic_check"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Successful"
            android:layout_marginTop="114dp"
            android:layout_gravity="top|center"
            android:textColor="@color/gray_9"
            android:textSize="@dimen/value_20sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 days ago"
            android:layout_marginTop="144dp"
            android:gravity="center"
            android:layout_gravity="top|center"
            android:textColor="@color/gray_8"
            android:textSize="14sp"
            android:fontFamily="@font/ttcommons_regular"/>
    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/inc_transaction_id_details"
        layout="@layout/transaction_status_id_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="120dp" />

    <include
        android:id="@+id/inc_paid_to_details"
        layout="@layout/transaction_status_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp" />

    <include
        android:id="@+id/inc_debited_from_details"
        layout="@layout/transaction_status_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="98dp"
    />

    <include
        android:id="@+id/inc_Help_support_details"
        layout="@layout/transaction_status_id_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="125dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by"
        android:layout_marginBottom="72dp"
        android:layout_gravity="bottom|center"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/value_16sp"
        android:fontFamily="@font/ttcommons_regular"/>

    <Button
        android:id="@+id/btn_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:layout_marginBottom="16dp"
        android:text="Back to home page"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_regular"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/button_style"
        android:drawableStart="@drawable/ic_arrow_back_blue"
        />
</FrameLayout>