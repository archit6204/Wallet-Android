<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/inc_account_details_mobile_number"
        layout="@layout/item_casual_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <include
        android:id="@+id/inc_account_details_vpa"
        layout="@layout/item_casual_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginItemsInSectionMedium" />

    <include
        android:id="@+id/inc_account_details_username"
        layout="@layout/item_casual_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginItemsInSectionMedium" />

    <Button
        android:id="@+id/btn_edit_profile"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginItemsInSectionSmall"
        android:layout_marginTop="32dp"
        android:textSize="@dimen/value_20sp"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        android:textAllCaps="false"
        android:text="@string/edit_profile" />

</LinearLayout>