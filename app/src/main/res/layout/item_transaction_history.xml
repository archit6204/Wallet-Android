<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:id="@+id/wallet_fragment_frame_container"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@color/gray"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_fragment_wallet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/white"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_transaction_type_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:srcCompat="@drawable/ic_transaction_wallet"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_transaction_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid to:"
                android:layout_marginTop="16dp"
                android:layout_marginStart="60dp"
                android:layout_gravity="start|top"
                android:textColor="@color/gray_7"
                android:textSize="@dimen/value_16sp"
                android:fontFamily="@font/ttcommons_regular"/>

            <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_history_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+  â‚¹ 150"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|top"
            android:textColor="@color/colorAccentBlue50"
            android:textSize="@dimen/value_16sp"
            android:fontFamily="@font/ttcommons_demibold"/>

            <!--<ProgressBar
                android:id="@+id/pb_wallet"
                style="?android:attr/progressBarStyle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="end|top"
                android:layout_marginEnd="65dp"
                android:indeterminateTint="@color/colorAccentBlue50"
                android:visibility="visible"/>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_beneficiary_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JusTap wallet"
                android:layout_marginTop="36dp"
                android:layout_marginStart="60dp"
                android:gravity="center"
                android:layout_gravity="start|top"
                android:textColor="@color/gray_5"
                android:textSize="14sp"
                android:fontFamily="@font/ttcommons_regular"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_transaction_instrument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debited from: HDFC bank"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end|bottom"
                android:textColor="@color/gray_7"
                android:textSize="12sp"
                android:fontFamily="@font/ttcommons_regular"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_gravity="start|bottom"
                android:textColor="@color/gray_3"
                android:textSize="12sp"
                android:fontFamily="@font/ttcommons_regular"/>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>