<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_item_metro_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/ic_delhi_metro_logo" />

    <TextView
        android:id="@+id/tv_metro_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginStart="38dp"
        android:text="Metro"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_item_bus_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/marginItemsInSectionSmall"
        app:srcCompat="@drawable/ic_bus_stop_logo" />

    <TextView
        android:id="@+id/tv_bus_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Bus"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_item_upi_icon"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/marginItemsInSectionSmall"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/ic_upi_logo" />

    <TextView
        android:id="@+id/tv_upi_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="52dp"
        android:layout_gravity="end"
        android:text="UPI"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_item_sendMoney_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="0dp"
        app:srcCompat="@drawable/rupee" />

    <TextView
        android:id="@+id/tv_sendMoney_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="34dp"
        android:layout_gravity="center"
        android:text="Send"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_item_addMoney_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center|start"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/ic_transaction_wallet" />

    <TextView
        android:id="@+id/tv_addMoney_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="34dp"
        android:layout_gravity="center|start"
        android:text="Add"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_nfc_sendMoney_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginBottom="80dp"
        android:layout_gravity="center|end"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/ic_cashless_nfc_payment" />

    <TextView
        android:id="@+id/tv_sendMoney_nfc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="34dp"
        android:layout_gravity="center|end"
        android:text="Via NFC"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:background="?android:attr/listDivider"
         />

    <ProgressBar
        android:id="@+id/pb_transaction_history"
        style="?android:attr/progressBarStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal|center"
        android:indeterminateTint="@color/colorAccentBlue50"
        android:visibility="invisible"/>

</FrameLayout>