<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_item_metro_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:layout_marginStart="32dp"
        app:srcCompat="@drawable/ic_delhi_metro_logo" />

    <TextView
        android:id="@+id/tv_metro_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginStart="38dp"
        android:text="Metro"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_item_bus_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/marginItemsInSectionSmall"
        app:srcCompat="@drawable/ic_bus_stop_logo" />

    <TextView
        android:id="@+id/tv_bus_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="Bus"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <ImageView
        android:id="@+id/iv_item_upi_icon"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/marginItemsInSectionSmall"
        android:layout_marginEnd="32dp"
        app:srcCompat="@drawable/ic_upi_logo" />

    <TextView
        android:id="@+id/tv_upi_icon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="52dp"
        android:layout_gravity="end"
        android:text="UPI"
        android:textColor="@color/colorAccentBlue50"
        android:fontFamily="@font/ttcommons_demibold"
        app:layout_constraintStart_toStartOf="@+id/tv_item_casual_list_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_casual_list_title" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="164dp"
        android:background="?android:attr/listDivider"
         />


</FrameLayout>