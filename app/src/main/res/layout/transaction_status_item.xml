<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_100">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_transaction_id"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        android:layout_gravity="top"
        app:cardBackgroundColor="@color/white"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_beneficiary_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/ic_user"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_beneficiary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archit Pandey"
            android:layout_marginTop="48dp"
            android:layout_marginStart="64dp"
            android:layout_gravity="top"
            android:textColor="@color/gray_7"
            android:textSize="@dimen/value_18sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_beneficiary_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="64dp"
            android:textColor="@color/gray_5"
            android:textSize="@dimen/value_14sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹ 150.00"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end|top"
            android:textColor="@color/gray_6"
            android:textSize="@dimen/value_18sp"
            android:fontFamily="@font/ttcommons_demibold"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_paid_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid to"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:layout_gravity="start|top"
            android:textColor="@color/gray_5"
            android:textSize="14sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end|bottom"
            android:textColor="@color/colorAccentBlue50"
            android:textSize="16sp"
            android:fontFamily="@font/ttcommons_regular"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_share_logo"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="end|bottom"
            app:srcCompat="@drawable/ic_baseline_share_24"
            />

        <ProgressBar
            android:id="@+id/pb_transaction_status_item"
            style="?android:attr/progressBarStyle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="end|bottom"
            android:indeterminateTint="@color/colorAccentBlue50"
            android:visibility="invisible"/>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>